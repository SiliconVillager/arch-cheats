#!/bin/bash

# Make sure only root can run our script
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

# Automatically create system snapshot
sh snapper-snap root SystemUpdate

echo "---------------------------------------------"
echo "PACMAN UPDATE"
echo "---------------------------------------------"

# Update pacman
pacman -Syu

echo "---------------------------------------------"
echo "AUR UPDATE"
echo "---------------------------------------------"

# Update yay
yay -Syu
